<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="bitcamp.team.first.lms.dao.MemberDao">
  <resultMap type="member" id="memberMap">
    <id column="member_id" property="no"/>
    <result column="email" property="email"/>
    <result column="pwd" property="password"/>
    <result column="name" property="name"/>
    <result column="tel" property="tel"/>
    <result column="n_name" property="n_name"/>
    <result column="type" property="type"/>
    <result column="ban" property="ban"/>
  </resultMap>

  <sql id="default-columns">
    member_no,
    email,
    name,
    tel,
    n_name,
    type,
    ban
  </sql>

  <select id="findAll" resultMap="memberMap">
    select
      <include refid="default-columns"/>,
      pwd,
    from 
      member
    order by
      member_id desc
  </select>
 
  <select id="findByNo" resultMap="memberMap" parameterType="int">
    select
      <include refid="default-columns"/>,
    from member
    where
      member_no = #{value}
  </select>
  
  <insert id="insert" parameterType="member">
    insert into member (
      type, email, pwd, n_name, name, tel
    )
    values 
      (#{type}, #{email}, password(#{password}), #{n_name}, #{name}), #{tel})
  </insert>
  
  
  <update id="update" parameterType="member">
    update member
    <set>
      <if test="type != null">type = #{type},</if>
      <if test="email != null">email = #{email},</if>
      <if test="password != null">pwd = password(#{password}),</if>
      <if test="n_name != null">n_name = #{n_name},</if>
      <if test="name != null">name = #{name}</if>
      <if test="tel != null">tel = #{tel},</if>
    </set>
      where
        member_no = #{no}
  </update>
  
  <delete id="delete" parameterType="int">
    delete from member where member_no = #{no}
  </delete>
  
  <select id="countAll" resultType="int">
    select count(*) from member
  </select>
</mapper>